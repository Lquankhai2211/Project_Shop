@model List<Shop.Models.Order>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<h2>Quản lý đơn hàng</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Email của khách</th>
            <th>Địa chỉ</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th>Số điện thoại</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Email</td> 
                <td>@order.Address</td>
                <td>@order.Amount</td>
                <td>@order.TotalPrice</td>
                <td>@order.Phone</td>
                <td>@order.Status</td>

                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Order", new { id = order.Id })">Sửa trạng thái</a>
                </td>
            </tr>
        }
    </tbody>
</table>
